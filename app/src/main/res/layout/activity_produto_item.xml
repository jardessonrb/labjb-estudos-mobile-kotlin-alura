<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#D2691E"
    >

    <TextView
        android:id="@+id/text_view_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cesta de tomate"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_view_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cesta de laranja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_nome" />

    <TextView
        android:id="@+id/text_view_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 10,00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_descricao" />

</androidx.constraintlayout.widget.ConstraintLayout>